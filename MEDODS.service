[Unit]
Description=MEDODS Integration

[Service]
WorkingDirectory=/home/misha/apps/MEDODS/
ExecStart=/usr/bin/node /home/misha/apps/MEDODS/dist/Server/start.js
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=MEDODS-app
User=misha
Environment=NODE_ENV=production
Environment=PORT=8080

[Install]
WantedBy=multi-user.target